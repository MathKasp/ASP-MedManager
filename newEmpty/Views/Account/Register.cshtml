@model RegisterViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Création de votre profil</title>
</head>

<body>
    <h1> Bienvenue dans l'espace pour créer votre profil </h1>

    <form asp-action="Register" asp-controller="Account" method="post">

        <div class="form-group">

            <label>Nom d'utilisateur</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>

        </div>

        <div class="form-group">

            <label>Mot de passe</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>

        <div class="form-group">

            <label> Nom </label>
            <input asp-for="Nom_m" class="form-control" />
            <span asp-validation-for="Nom_m" class="text-danger"></span>

        </div>

        <div class="form-group">

            <label> Prénom </label>
            <input asp-for="Prenom_m" class="form-control" />
            <span asp-validation-for="Prenom_m" class="text-danger"></span>

        </div>

        <div class="form-group">

            <label> Identifiant du Médecin </label>
            <input asp-for="Identifiant_m" class="form-control" />
            <span asp-validation-for="Identifiant_m" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <labe> Date de naissance</label>

            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <br />
        <br />

        <input type="submit" value="Valider les informations" class="btn btn-primary" />
        <a asp-action="Login" type="button" class="btn btn-secondary">Retour</a>
    </form>

    <div asp-validation-summary="All" class="text-danger"></div>

</body>

</html>