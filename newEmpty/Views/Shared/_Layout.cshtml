<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MedManager</title>

    @* import de bootstrap et js *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    @* * *@

</head>

<body class="bodycolor">

    <nav class="navbar navbar-expand-lg bg-body-tertiary navbarcolor">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Bienvenu ! </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>

            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Retour au Menu</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-controller="Patient" asp-action="Index">Patients <i class="bi bi-people"></i></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-controller="Ordonnance" asp-action="Index">Ordonnances <i class="bi bi-file-medical"></i></a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Préscriptions
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" aria-current="page" asp-controller="Medicament" asp-action="Index">Médicaments <i class="bi bi-capsule"></i></a>
                                </li>
                                <li>
                                    <a class="dropdown-item" aria-current="page" asp-controller="Antecedent" asp-action="Index">Antécédents <i class="bi bi-heart-pulse"></i></a>
                                </li>
                                <li>
                                    <a class="dropdown-item" aria-current="page" asp-controller="Allergie" asp-action="Index">Allergies <i class="bi bi-lungs"></i></a>
                                </li>
                            </ul>
                        </li>
                        <span class="navbar-text">Bienvenu, @User.Identity.Name!</span>
                        <a asp-action="Logout" asp-controller="Account">Se déconnecter</a>
                    }
                    else
                    {
                        <a asp-action="Login" asp-controller="Account">Connexion</a>
                    }
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
</body>

</html>

<style>
    .navbarcolor {
        background-color: rgb(222, 223, 231);
    }

    .bodycolor {
        background-color: aliceblue;
    }

    .centrer {
        display: flex;
        justify-content: center;
        align-items: center;
        height: max-content;
    }
</style>
