@model IEnumerable<Allergie>
@{
    <html>

    <head>
        <title>Index</title>
    </head>

    <body>
        <h1 class="centrer">Gestion des allergies</h1>

        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th scope="col">Allergie</th>
                    <th scope="col">Détails</th>
                    <th scope="col"> Retirer une allergie</th>
                    <th scope="col"> Modifier une allergie </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var allergie in Model)
                {
                    <tr>
                        <td></td>
                        <td scope="row" class="text_search">@allergie.Nom_Allergie</td>
                        <td scope="row"><a asp-controller="Allergie" asp-action="ShowDetails"
                                asp-route-id="@allergie.AllergieId">Détail</a></td>
                        <td scope="row"><a asp-controller="Allergie" asp-action="Remove" asp-route-id="@allergie.AllergieId">
                                Retirer</a> </td>
                        <td scope="row"><a asp-controller="Allergie" asp-action="Edit" asp-route-id="@allergie.AllergieId">
                                Modifier</a> </td>
                    </tr>
                }
            </tbody>
        </table>

        <div>
            <button type="button" class="btn btn-light">
                <a asp-controller="Allergie" asp-action="Add"> Ajouter une allergie </a>
            </button>
        </div>

    </body>

    </html>
}
