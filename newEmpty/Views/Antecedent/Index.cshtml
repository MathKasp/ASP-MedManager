@model IEnumerable<Antecedent>
@{
    <html>

    <head>
        <title>Index</title>
    </head>

    <body>
        <h1 class="centrer">Gestions des antécédents</h1>

        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th scope="col">Antécédent</th>
                    <th scope="col">Détails</th>
                    <th scope="col"> Retirer un antécédent</th>
                    <th scope="col"> Modifier un antécédent </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var antecedent in Model)
            {
                <tr>
                    <td></td>
                    <td scope="row" class="text_search">@antecedent.Nom_Antecedent</td>
                    <td scope="row"><a asp-controller="Antecedent" asp-action="ShowDetails" asp-route-id="@antecedent.AntecedentId">Détail</a></td>
                    <td scope="row"><a asp-controller="Antecedent" asp-action="Remove" asp-route-id="@antecedent.AntecedentId"> Retirer</a> </td>
                    <td scope="row"><a asp-controller="Antecedent" asp-action="Edit" asp-route-id="@antecedent.AntecedentId"> Modifier</a> </td>
                </tr>
            }
            </tbody>
        </table>

        <div>
            <button type="button" class="btn btn-light">
            <a asp-controller="Antecedent" asp-action="Add"> Ajouter un antécédent </a>
            </button>
        </div>

    </body>

    </html>
}
