@model AntecedentAddViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ajout antecedent</title>
</head>

<body>
    <h1> Bienvenu dans l'espace pour ajouter un antecedent </h1>

    <form asp-action="AddConfirmed" asp-controller="Antecedent" method="post">

        <input asp-for="Antecedent.AntecedentId" type="hidden" value="0" />

        <div class="form-group">

            <label asp-for="Antecedent.Nom_Antecedent"></label>
            <input asp-for="Antecedent.Nom_Antecedent" class="form-control" />

            <span asp-validation-for="Antecedent.Nom_Antecedent" class="text-danger"></span>
        </div>

        <div> Médicaments a proscrires </div>
        <div class="form-group">

            @foreach (var medicament in Model.Medicaments)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedMedicamentIds"
                        value="@medicament.MedicamentId" @(Model.SelectedMedicamentIds != null &&
                    Model.SelectedMedicamentIds.Contains(medicament.MedicamentId) ? "checked" : "") />

                    <label class="form-check-label">@medicament.Nom_med</label>

                </div>
            }
        </div>

        <br />
        <br />

        <input type="submit" value="Créer un nouvel antecedent" class="btn btn-primary" />
        <a asp-action="Index" type="button" class="btn btn-secondary">Retour</a> 
    </form>

    @* Permet de visualiser le resume de l'ensemble des erreurs de validation, ceci est un tag helper *@
    <div asp-validation-summary="All" class="text-danger"></div>

</body>

</html>